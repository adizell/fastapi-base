# Environment - development, staging, production
ENVIRONMENT=development
DEBUG=True

# API Configuration
PROJECT_NAME=FastAPI Project
PROJECT_DESCRIPTION=Modern FastAPI project with authentication and authorization
VERSION=1.0.0
API_PREFIX=/api

# Security (no terminal: openssl rand -hex 32)
SECRET_KEY=YourVerySecretKey-Please-Change-This-In-Production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Database
POSTGRES_SERVER=db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app
POSTGRES_PORT=5432

# First Superuser (uncomment to create on startup)
# FIRST_SUPERUSER_EMAIL=admin@example.com
# FIRST_SUPERUSER_PASSWORD=admin  # Change this in production!

# Database Initialization
INITIALIZE_DB=True

# Redis (não é necessário se não estiver usando Redis)
# REDIS_HOST=redis
# REDIS_PORT=6379

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO